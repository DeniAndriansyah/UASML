<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/cream"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimulasiModelActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="249dp"
        android:layout_height="70dp"
        android:background="@color/ungu"
        android:minHeight="?attr/actionBarSize"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="SIMULASI MODEL"
            android:textAlignment="center"
            android:textColor="@color/cream"
            android:textSize="24dp"
            android:textStyle="bold|italic"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="14dp" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btnCheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/biru">

                <EditText
                    android:id="@+id/FixedAcidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="FixedAcidity (3.6 ~ 15.9)"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ungu"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/biru">

                <EditText
                    android:id="@+id/VolatileAcidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="VolatileAcidity (0.08 ~ 1.58)"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ungu"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/biru">

                <EditText
                    android:id="@+id/CitricAcide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CitricAcide (0.00 ~ 1.66)"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ungu" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/biru">

                <EditText
                    android:id="@+id/ResidualSugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ResidualSugar (0.60 ~ 65.80)"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ungu" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/biru">

                <EditText
                    android:id="@+id/Chlorides"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Chlorides (0.00 ~ 0.61)"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ungu"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/biru">

                <EditText
                    android:id="@+id/FreeSulfurDioxide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="FreeSulfurDioxide (1.00 ~ 289.00)"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ungu" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/biru">

                <EditText
                    android:id="@+id/TotalSulfurDioxide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="TotalSulfurDioxide(6.00 ~ 440.00)"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ungu" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/biru">

                <EditText
                    android:id="@+id/Density"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Density (0.98 ~ 1.03) "
                    android:inputType="numberDecimal"
                    android:textColor="@color/ungu"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/biru">

                <EditText
                    android:id="@+id/PH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PH (2.72 ~ 4.01)"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ungu" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/biru">

                <EditText
                    android:id="@+id/Sulphates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sulphates (0.22 ~ 2.00)"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ungu"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/biru">

                <EditText
                    android:id="@+id/Alcohol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alcohol(8.00 ~ 14.90)"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ungu" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/biru"
        android:text="Predict"
        app:layout_constraintTop_toBottomOf="@id/mainScrollView"
        app:layout_constraintBottom_toTopOf="@id/txtResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCheck"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
