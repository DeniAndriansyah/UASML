<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/cream"
    tools:context=".MainActivity">

    <!-- Gambar Logo Utama -->

    <!-- Teks Judul -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clipToOutline="true"
        android:contentDescription="nice"
        android:src="@drawable/gambar0"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Wine Quality"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/logo1"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Gambar Kecil Kiri -->
    <ImageView
        android:id="@+id/logo2"
        android:layout_width="160dp"
        android:layout_height="128dp"
        android:clipToOutline="true"
        android:contentDescription="nice"
        android:src="@drawable/gambar1"
        app:layout_constraintBottom_toTopOf="@id/descriptionText"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@id/logo1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Gambar Kecil Kanan -->
    <ImageView
        android:id="@+id/logo1"
        android:layout_width="152dp"
        android:layout_height="126dp"
        android:clipToOutline="true"
        android:contentDescription="nice"
        android:src="@drawable/gambar1"
        app:layout_constraintBottom_toTopOf="@id/descriptionText"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/logo2"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Teks Deskripsi -->

    <!-- Tombol Masuk -->

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="345dp"
        android:layout_height="66dp"
        android:gravity="center"
        android:text="Wine Quality ini yaitu sebuah aplikasi yang dimana untuk memprediksi apakah quality wine ini bagus atau tidak"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="italic|normal"
        app:layout_constraintBottom_toTopOf="@+id/btnPindah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo1"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnPindah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/biru"
        android:text="Masuk"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/descriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
